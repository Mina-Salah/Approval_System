@{
    ViewData["Title"] = "Home";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

    .animated-icon {
        font-size: 2rem;
        color: #0d6efd;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-5px);
    }

    }
</style>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Welcome</h2>
        <p class="lead text-muted">File Management & Approval System</p>
    </div>

    @if (ViewBag.Role == "Admin")
    {
        <div class="row justify-content-center">
            <!-- User Management -->
            <div class="col-md-4 mb-4">
                <div class="card shadow rounded-4">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill animated-icon mb-3"></i>
                        <h5 class="card-title">User Management</h5>
                        <p class="card-text">View, add, and manage users in the system.</p>
                        <a href="/Admin/UserList" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-list-ul me-1"></i> View Users
                        </a>
                        <a href="/Admin/CreateUser" class="btn btn-primary w-100">
                            <i class="bi bi-person-plus-fill me-1"></i> Add User
                        </a>
                    </div>
                </div>
            </div>

            <!-- File Management -->
            <div class="col-md-4 mb-4">
                <div class="card shadow rounded-4">
                    <div class="card-body text-center">
                        <i class="bi bi-folder-fill animated-icon mb-3 text-success"></i>
                        <h5 class="card-title">File Management</h5>
                        <p class="card-text">Create new files and set approval stages.</p>
                        <a href="/Admin/CreateFile" class="btn btn-success w-100 mb-2">
                            <i class="bi bi-file-earmark-plus me-1"></i> Create File
                        </a>
                        <a href="/Admin/FileList" class="btn btn-outline-success w-100">
                            <i class="bi bi-folder2-open me-1"></i> View Files
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
