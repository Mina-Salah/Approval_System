@{
    ViewData["Title"] = "الرئيسية";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">مرحبًا بك</h2>
        <p class="lead">نظام إدارة الملفات والموافقات</p>
    </div>

    @if (ViewBag.Role == "Admin")
    {
        <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow rounded-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">إدارة المستخدمين</h5>
                        <p class="card-text">عرض وإضافة وتعديل المستخدمين.</p>
                        <a href="/Admin/UserList" class="btn btn-outline-primary w-100 mb-2">عرض المستخدمين</a>
                        <a href="/Admin/CreateUser" class="btn btn-primary w-100">إضافة مستخدم</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card shadow rounded-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">الملفات</h5>
                        <p class="card-text">إنشاء ملفات جديدة وتحديد مراحل الموافقة.</p>
                        <a href="/Admin/CreateFile" class="btn btn-success w-100 mb-2">إنشاء ملف</a>
                        <a href="/Admin/FileList" class="btn btn-outline-success w-100">عرض الملفات</a>
                    </div>
                </div>
            </div>
        </div>

       

    }
</div>
